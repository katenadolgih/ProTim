<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_top_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Разделы и марки -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Разделы и марки"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/section_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"/>


        <!-- Владею ПО -->
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Владение ПО"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/software_container_filer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"/>


        <!-- Резюме -->
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Резюме"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/resume_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_pdf"
            android:drawablePadding="8dp"
            android:paddingTop="4dp"
            android:textColor="@color/active_field" />

        <!-- Образование -->
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Образование"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingTop="4dp"
            android:textSize="14sp" />

        <!-- Дипломная работа -->
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дипломная работа"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/diploma_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_pdf"
            android:drawablePadding="8dp"
            android:paddingTop="4dp"
            android:textColor="@color/active_field" />

        <!-- Социальные сети -->
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мои социальные сети"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/vk_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:paddingTop="4dp"
            android:textColor="@color/active_field" />

        <!-- Telegram -->
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telegram"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/telegram_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:paddingTop="4dp"
            android:textColor="@color/active_field" />

        <!-- О себе -->
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="О себе"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/about_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>
